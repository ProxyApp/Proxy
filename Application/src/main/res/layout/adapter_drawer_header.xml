<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/adapter_drawer_header_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/adapter_drawer_header_image"
        android:layout_width="@dimen/common_circleimageview_settings_radius"
        android:layout_height="@dimen/common_circleimageview_settings_radius"
        android:layout_marginBottom="@dimen/common_margin_small"
        android:layout_marginStart="@dimen/common_margin_huge"
        android:layout_marginTop="@dimen/common_margin_xhuge"
        android:contentDescription="@string/drawer_header_image"/>

    <TextView
        android:id="@+id/adapter_drawer_header_name"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/common_margin_huge"
        android:layout_marginStart="@dimen/common_margin_huge"/>

</LinearLayout>